<Window x:Class="ObjectMovingUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObjectMovingUI"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Menu Grid.Column="0" Grid.Row="0" Background="White">
            <MenuItem Header="_File">
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Close"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
            <MenuItem Header="_Zoom">
                <MenuItem Header="_Kho 1"/>
                <MenuItem Header="_Kho 2"/>
                <MenuItem Header="_Kho 3"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Contact"/>
                <MenuItem Header="_Support"/>
            </MenuItem>
        </Menu>

        <ScrollViewer Grid.Column="0" Grid.Row="1"  x:Name="DrawArea" Background="Azure"/>
        
        <Label Grid.Row="2" Grid.ColumnSpan="2" Content="Zoom box aka Slider to Zoom"/>
    </Grid>
</Window>
