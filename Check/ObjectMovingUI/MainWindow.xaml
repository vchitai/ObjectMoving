<Window x:Class="ObjectMovingUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObjectMovingUI"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.Column="0" Grid.Row="0" Background="White">
            <MenuItem Header="_File">
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Close"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
            <MenuItem Header="_Zoom">
                <MenuItem Header="_Kho 1"/>
                <MenuItem Header="_Kho 2"/>
                <MenuItem Header="_Kho 3"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Contact"/>
                <MenuItem Header="_Support"/>
            </MenuItem>
        </Menu>

        <ScrollViewer Grid.ColumnSpan="2" Grid.Row="1"  x:Name="DrawArea" Background="Azure"/>
        <StackPanel  Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
            <Label x:Name="textBlock1" HorizontalAlignment="Left" Content="From:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="startPos" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="73" VerticalContentAlignment="Center" Text="[k0] (x0, y0)" Margin="0,6"/>
            <Label x:Name="textBlock1_Copy" HorizontalAlignment="Left" VerticalAlignment="Center" Content="To:" VerticalContentAlignment="Center"/>
            <TextBox x:Name="endPos" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="68" VerticalContentAlignment="Center" Text="[k1] (x1, y1)"/>
            <Button x:Name="move" Content="Move" HorizontalAlignment="Left" VerticalAlignment="Center" Background="LightPink" ToolTip="Di chuyen hang tu vi tri nguon den vi tri dich" Margin="10,6,0,6" Padding="5, 0, 5, 0" Click="move_Click"/>
        </StackPanel>
        <Label Grid.Row="2" Grid.Column="1" Content="Zoom box aka Slider to Zoom"/>
    </Grid>
</Window>
